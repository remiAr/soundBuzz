{% extends "SoundBuzzBundle:Default:layout.html.twig" %}
{% block title %} Accueil - SoundBuzz {% endblock %}

{% block body %}

 {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                Bonjour, {{user.firstName}}
                            <a href="{{ path('soundbuzz_profil', {'id': user.id}) }}"><button>Profil</button></a>
                        {% else %}
                            <a href="{{ path('fos_user_registration_register') }}"><button>Register</button></a>
