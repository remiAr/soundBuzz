<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\User" table="user">
    <indexes>
      <index name="fk_user_comments1_idx" columns="comments_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="username" type="string" column="username" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="password" type="string" column="password" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="firstName" type="string" column="first_name" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lastName" type="string" column="last_name" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="avatarUrl" type="string" column="avatar_url" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="isActivated" type="boolean" column="is_activated" nullable="true"/>
    <many-to-one field="comments" target-entity="Comments" fetch="LAZY">
      <join-columns>
        <join-column name="comments_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="track" target-entity="Track" inversed-by="user" fetch="LAZY">
      <join-table name="user_has_like">
        <join-columns>
          <join-column name="user_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="track_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
